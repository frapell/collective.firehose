<?xml version="1.0"?>
<object name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="collective.firehose"
    purge="False">
    <configlet title="Firehose Settings"
        action_id="firehose"
        appId="collective.firehose"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@firehose-settings"
        icon_expr="string:${portal_url}/++resource++collective.firehose/firehose_icon.png"
        visible="True"
        i18n:attributes="title">
        <permission>Manage portal</permission>
    </configlet>
</object>
